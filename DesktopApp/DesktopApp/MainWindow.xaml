<Window x:Class="DesktopApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DesktopApp"
        mc:Ignorable="d"
        Title="Авторизация" Height="450" Width="800" SizeChanged="Window_SizeChanged">
    <Grid>
        <TextBox x:Name="loginBox" HorizontalAlignment="Left" Margin="95,87,0,0" FontSize="25" TextWrapping="Wrap" VerticalAlignment="Top" Width="466" Height="56"/>
        <TextBox x:Name="passwordBox" HorizontalAlignment="Left" Margin="95,217,0,0" FontSize="25" TextWrapping="Wrap" VerticalAlignment="Top" Width="466" Height="56"/>
        <TextBlock HorizontalAlignment="Left" Margin="95,58,0,0" FontSize="18" TextWrapping="Wrap" Text="Логин" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="95,188,0,0" FontSize="18" TextWrapping="Wrap" Text="Пароль" VerticalAlignment="Top"/>
        <Button x:Name="authButton" Content="Войти в систему" FontSize="20" HorizontalAlignment="Center" Margin="0,352,0,0" VerticalAlignment="Top" Height="46" Width="200" Click="authButton_Click"/>
    </Grid>
</Window>
